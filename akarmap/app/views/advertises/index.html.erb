<p id="notice"><%= notice %></p>

<h1>Listing Advertises</h1>


<table>
  <thead>
    <tr>
      <th colspan="1"></th>
      <th>Desc</th>
      <th>Type</th>
      <th>City</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advertises.each do |advertise| %>
      <tr>

        <td><%= image_tag advertise.avatar.url(:thumb) %></td>
        <td><%= advertise.desc %></td>
        <td><%= advertise.mytype %></td>
        <td><%= advertise.city %></td>
        <td><%= advertise.address %></td>

        <td><%= link_to 'Show', advertise %></td>
        <td><%= link_to 'Edit', edit_advertise_path(advertise) %></td>
        <td><%= link_to 'Destroy', advertise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Advertise', new_advertise_path %>



